<h1><%= t('views.common.title_index', name: i18n_pluralize(Comment.model_name.human)) %></h1>

<div id="comments" class="index-items">
  <% @comments.each do |comment| %>
    <div class="index-item">
    <%= render comment %>
    <p>
      <%= link_to t('views.common.show', name: Comment.model_name.human.downcase), comment %>
    </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
    <%= link_to  t('views.common.new', name: Comment.model_name.human.downcase), new_comment_path %>
</nav>
