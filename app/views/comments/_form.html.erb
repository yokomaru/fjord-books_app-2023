<% if comment.errors.any? %>
  <div style="color: red">
    <h2><%= t('views.common.validation_error', errors: i18n_error_count(comment.errors.count), name: Comment.model_name.human.downcase) %>:</h2>
    <ul>
      <% comment.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<br />

<div>
  <%= form.label :title, style: "display: block" %>
  <%= form.text_field :title, maxlength: 100, required: true %>
</div>

<div>
  <%= form.label :content, style: "display: block" %>
  <%= form.text_area :content, maxlength: 10_000, required: true %>
</div>

<div>
  <%= form.submit %>
</div>
