<h1><%= Book.model_name.human %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('views.common.link.show_this_item', item: Book.model_name.human), book %>
      </p>
    </div>
  <% end %>
</div>

